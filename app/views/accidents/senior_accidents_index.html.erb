<% provide(:title, '月別ヒヤリ・事故') %>

<style type="text/css">
  #table_detail .hidden_row {
    display: none;
  }
</style>

<script>
    function show_hide_row(row) {
        $("." + row).toggle();
    }
</script>

<div id="facility-name">
  <h3><%= current_facility.name %></h3>
</div>

<h1 class="month-title-position">利用者別ヒヤリ一覧/報告書作成</h1>

<div class="container">
  <ul class="nav nav-tabs font-M">
    <li class="active"><a href="#2f" data-toggle="tab">2階フロア</a></li>
    <li><a href="#3f" data-toggle="tab">3階フロア</a></li>
    <li><a href="#4f" data-toggle="tab">4階フロア</a></li>
  </ul>
  <div class="tab-content">
    <!--2F-利用者一覧-->
    <div class="tab-pane active" id="2f">
      <div class="col-md-12 tab-table">
        <table id="table_detail" class="table table-bordered table-condensed table-hover">
          <thead>
            <tr>
              <th class="pink-thead">利用者</th>
              <th class="pink-thead">ヒヤリ・事故件数</th>
              <th class="pink-thead">閲覧</th>
              <th class="pink-thead">ヒヤリ新規作成</th>
            </tr>
          </thead>
          <% check = nil %>
          <% @seniors2f.each_with_index do |senior, i| %>
            <% accidents2f = Accident.where(senior_id: senior.id).includes(:senior).where(accident_floor: 2).order(accident_datetime: "desc") %>
            <% accidents2f.each_with_index do |accident, a| %>

              <!--各利用者毎に共通する整数を作成しmonthに代入-->
              <%# month = (l(accident.accident_datetime, format: :integer) + accident.accident_floor.to_s).to_i %>
              <tbody>
              <!--月の最初一行だけを取り出す為のcheck-->
              <% if senior.senior_name != check %>
                <tr>
                  <td class="month">
                    <%= senior.senior_name %>
                  </td>
                  <td class="month-count">
                    【ヒヤリ <%= @accidents2f.where(which_accident: "ヒヤリハット").where(senior_id: senior).count %>件】
                    【事故 <%= @accidents2f.where(which_accident: "事故").where(senior_id: senior).count %>件】
                  </td>
                  <td class="show-btn-position" onclick="show_hide_row('hidden_row<%= i %>');">
                    <%= link_to "ヒヤリ・事故一覧", "#", remote: true, class: "btn-square-shadow-mini" %>
                  </td>
                  <td class="create_accident">
                    <%= link_to "ヒヤリ新規作成", new_facility_senior_accident_path(@facility, senior), local: true, class: "btn-square-shadow-red" %>
                  </td>
                </tr>
                <tr class="hidden_row hidden_row<%= i %>">
                  <th class="accidents-th">日時</th>
                  <th class="accidents-th"><%= senior.senior_name %>&emsp;ヒヤリ・事故内容</th>
                  <th class="accidents-th" colspan="2">ヒヤリ・事故内容</th>
                <tr>
                  <% check = senior.senior_name %>
              <% end %>
              <% if a % 2 == 0 %>
                <tr class="hidden_row hidden_row<%= i %>">
                  <td class="accident-senior tr-back1">
                    <%= l(accident.accident_datetime, format: :half) %>
                  </td>
                  <td class="accident-senior tr-back1">
                    <div class="which-accident">
                      <%= accident.which_accident %>
                    </div>
                    <div class="accident-scene-position">
                      <%= accident.accident_scene %>
                    </div>
                  </td>
                  <td class="show-btn-position tr-back1" colspan="2">
                    <%= link_to "ヒヤリ詳細", "#", remote: true, class: "btn-square-shadow-blue" %>
                  </td>
                </tr>
              <% else %>
                <tr class="hidden_row hidden_row<%= i %>">
                  <td class="accident-senior">
                    <%= l(accident.accident_datetime, format: :half) %>
                  </td>
                  <td class="accident-senior">
                    <div class="which-accident">
                      <%= accident.which_accident %>
                    </div>
                    <div class="accident-scene-position">
                      <%= accident.accident_scene %>
                    </div>
                  </td>
                  <td class="show-btn-position" colspan="2">
                    <%= link_to "ヒヤリ詳細", "#", remote: true, class: "btn-square-shadow-blue" %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
