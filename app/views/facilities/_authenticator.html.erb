<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>
<% provide(:qr_button, 'QRコード表示切替') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">施設情報編集</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <% if @facility.display? %>
            <div style="color: #c3325f; font-size: 16px; text-align: center; font-family: 'M PLUS Rounded 1c', sans-serif;">【現在】表示中（スキャン後、非表示にすることをお勧めします。）</div>
          <% else %>
            <div style="color: #0055aa; font-size: 16px; text-align: center; font-family: 'M PLUS Rounded 1c', sans-serif;">【現在】非表示</div>
          <% end %>
          <div class="center">
            <img src="<%= @facility.google_qr_uri %>" width="120" height="120" style="margin-bottom: -15px;" >
            <h2>「<%= @facility.name %>」さんの二段階認証QRコード表示切替ができます。</h2>
            <%= link_to yield(:qr_button), update_authenticator_facility_path(@facility), method: :patch,
                        data: { confirm: "「#{@facility.name}」さんの二段階認証QRコード表示切替をしても宜しいですか？"}, class: "btn-flat-border"%>
            <button type="button" class="btn btn-default" data-dismiss="modal" style="height: 31px;">
              キャンセル
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>