<% provide(:title, "ホーム") %>

<div class="center jumbotron" id="jumbo-position">

  <body class="main-img">
    <div id="hiyari-title">
      <h1>ヒヤリ・事故報告書管理システム</h1>
      <p>このアプリでは、ヒヤリハット・事故報告書の管理を簡単にすることができます。</p>
      <!--ログイン・ログインボタン--><!--未ログイン時のみ表示-->
      <% if logged_in? %>
        <div id="facility-title-name">
          <%= current_facility.name %>  　管理者画面
        </div>
      <% else %>
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#login-Modal">
          ログイン
        </button>
        <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#signup-Modal">
          施設新規登録
        </button>
      <% end %>
      <!-- ログインモーダル -->
      <div class="modal-position">
        <div class="modal fade" id="login-Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
          <div class="modal-dialog modal-lg modal-dialog-center" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">ログイン</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-md-6 col-md-offset-3">
                    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

                      <%= f.label :email, "メールアドレス", class: "label-login" %>
                      <%= f.email_field :email, class: 'form-control' %>

                      <%= f.label :password, "パスワード", class: "label-login" %>
                      <%= f.password_field :password, class: 'form-control' %>

                      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
                        <%= f.check_box :remember_me, id: "remember-me" %>
                        <span>ログイン情報を記憶</span>
                      <% end %>

                      <div class="login-btn">
                        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <p class="signup-font">ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %></p>
              </div><!-- /.modal-footer -->
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
      </div>

      <!-- サインアップモーダル -->
      <div class="modal-position">
        <div class="modal fade" id="signup-Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
          <div class="modal-dialog modal-lg modal-dialog-center" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">施設新規登録</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-md-6 col-md-offset-3">
                    <%= form_with(model: @facility, local: true) do |f| %>

                      <%= render 'shared/error_messages', model: f.object %>

                      <%= f.label :name, class: "label-signup" %>
                      <%= f.text_field :name, class: "form-control" %>

                      <%= f.label :email, class: "label-signup" %>
                      <%= f.email_field :email, class: "form-control" %>

                      <%= f.label :password, class: "label-signup" %>
                      <%= f.password_field :password, class: "form-control" %>

                      <%= f.label :password_confirmation, class: "label-signup" %>
                      <%= f.password_field :password_confirmation, class: "form-control" %>

                      <div class="btn-position">
                        <%= f.submit "登録", class: "btn btn-success btn-block btn-signup" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
      </div>
    </div>
  </body>
</div>

<!-- 切り替えボタンの設定 -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  ココを押すと表示
</button>

<!-- モーダルの設定 -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">モーダルのタイトル</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>モーダルのコンテンツ文。</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <button type="button" class="btn btn-primary">変更を保存</button>
      </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->